<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    android:background="@color/menuCardBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/menu_hint"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:background="@drawable/circulo"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/hintFontMenu"
            android:textSize="10sp" />

        <RelativeLayout
            android:id="@+id/menu_frame"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp">

            <ImageView
                android:id="@+id/menu_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="false"
                android:scaleType="fitXY" />

        </RelativeLayout>


        <TextView
            android:id="@+id/menu_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu_frame"
            android:gravity="center"
            android:text="aviso_titulo"
            android:textColor="@color/menuFonte"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
